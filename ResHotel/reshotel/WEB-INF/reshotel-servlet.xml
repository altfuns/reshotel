<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.springframework.org/schema/beans"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans-2.5.xsd" >

    <bean
        name="/reshotel/listaClientes"
        class="cr.ac.una.daw.reshotel.display.ClienteController" >

        <property
            name="clienteManager"
            ref="clienteManager" />
    </bean>

    <bean
        name="/reshotel/detalleCliente"
        class="cr.ac.una.daw.reshotel.display.ClienteDetalleController" >

        <property
            name="clienteManager"
            ref="clienteManager" />
        <property
            name="ubicacionManager"
            ref="ubicacionManager" />
    </bean>

    <bean
        name="/reshotel/actualizarCliente"
        class="cr.ac.una.daw.reshotel.display.ClienteActualizarController" >

        <property
            name="clienteManager"
            ref="clienteManager" />
    </bean>

    <bean
        name="/reshotel/agregarCliente"
        class="cr.ac.una.daw.reshotel.display.ClienteAgregarController" >

        <property
            name="clienteManager"
            ref="clienteManager" />
        <property
            name="ubicacionManager"
            ref="ubicacionManager" />
    </bean>

    <bean
        name="/reshotel/eliminarCliente"
        class="cr.ac.una.daw.reshotel.display.ClienteEliminarController" >

        <property
            name="clienteManager"
            ref="clienteManager" />
    </bean>
    
    <bean
        name="/reshotel/listaHabitaciones"
        class="cr.ac.una.daw.reshotel.display.HabitacionController" >

        <property
            name="habitacionManager"
            ref="habitacionManager" />
    </bean>

    <bean
        name="/reshotel/detalleHabitacion"
        class="cr.ac.una.daw.reshotel.display.HabitacionDetalleController" >

        <property
            name="habitacionManager"
            ref="habitacionManager" />
        <property
            name="hotelManager"
            ref="hotelManager" />
    </bean>

    <bean
        name="/reshotel/actualizarHabitacion"
        class="cr.ac.una.daw.reshotel.display.HabitacionActualizarController" >

        <property
            name="habitacionManager"
            ref="habitacionManager" />
    </bean>

    <bean
        name="/reshotel/agregarHabitacion"
        class="cr.ac.una.daw.reshotel.display.HabitacionAgregarController" >

        <property
            name="habitacionManager"
            ref="habitacionManager" />
        <property
            name="hotelManager"
            ref="hotelManager" />
    </bean>

    <bean
        name="/reshotel/eliminarHabitacion"
        class="cr.ac.una.daw.reshotel.display.HabitacionEliminarController" >

        <property
            name="habitacionManager"
            ref="habitacionManager" />
    </bean>
    
    <bean
        name="/reshotel/listaHoteles"
        class="cr.ac.una.daw.reshotel.display.HotelController" >

        <property
            name="hotelManager"
            ref="hotelManager" />
    </bean>

    <bean
        name="/reshotel/detalleHotel"
        class="cr.ac.una.daw.reshotel.display.HotelDetalleController" >

        <property
            name="hotelManager"
            ref="hotelManager" />
        <property
            name="habitacionManager"
            ref="habitacionManager" />
        <property
            name="ubicacionManager"
            ref="ubicacionManager" />
    </bean>

    <bean
        name="/reshotel/actualizarHotel"
        class="cr.ac.una.daw.reshotel.display.HotelActualizarController" >

        <property
            name="hotelManager"
            ref="hotelManager" />
    </bean>

    <bean
        name="/reshotel/agregarHotel"
        class="cr.ac.una.daw.reshotel.display.HotelAgregarController" >

        <property
            name="hotelManager"
            ref="hotelManager" />
        <property
            name="habitacionManager"
            ref="habitacionManager" />
        <property
            name="ubicacionManager"
            ref="ubicacionManager" />
    </bean>

    <bean
        name="/reshotel/eliminarHotel"
        class="cr.ac.una.daw.reshotel.display.HotelEliminarController" >

        <property
            name="hotelManager"
            ref="hotelManager" />
    </bean>
    
    <bean
        name="/reshotel/listaReservaciones"
        class="cr.ac.una.daw.reshotel.display.ReservacionController" >

        <property
            name="reservacionManager"
            ref="reservacionManager" />
    </bean>

    <bean
        name="/reshotel/detalleReservacion"
        class="cr.ac.una.daw.reshotel.display.ReservacionDetalleController" >

        <property
            name="reservacionManager"
            ref="reservacionManager" />
         <property
            name="clienteManager"
            ref="clienteManager" />
          <property
            name="habitacionManager"
            ref="habitacionManager" />
    </bean>

    <bean
        name="/reshotel/actualizarReservacion"
        class="cr.ac.una.daw.reshotel.display.ReservacionActualizarController" >

        <property
            name="reservacionManager"
            ref="reservacionManager" />
    </bean>

    <bean
        name="/reshotel/agregarReservacion"
        class="cr.ac.una.daw.reshotel.display.ReservacionAgregarController" >

        <property
            name="reservacionManager"
            ref="reservacionManager" />
         <property
            name="clienteManager"
            ref="clienteManager" />
          <property
            name="habitacionManager"
            ref="habitacionManager" />
    </bean>

    <bean
        name="/reshotel/eliminarReservacion"
        class="cr.ac.una.daw.reshotel.display.ReservacionEliminarController" >

        <property
            name="reservacionManager"
            ref="reservacionManager" />
    </bean>
    

    <bean
        id="viewResolver"
        class="org.springframework.web.servlet.view.InternalResourceViewResolver" >

        <property
            name="viewClass"
            value="org.springframework.web.servlet.view.JstlView" />

        <property
            name="prefix"
            value="/WEB-INF/jsp/" />

        <property
            name="suffix"
            value=".jsp" />
    </bean>

</beans>